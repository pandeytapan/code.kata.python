# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8               # Use UTF-8 encoding
end_of_line = lf              # Use LF as the line ending
insert_final_newline = true   # Ensure a newline at the end of the file
trim_trailing_whitespace = true  # Remove whitespace at the end of lines

# Python specific settings
[*.py]
indent_style = space          # Use spaces for indentation, not tabs
indent_size = 4               # 4 spaces per indentation level
max_line_length = 79          # PEP 8 recommendation for line length

# Django templates
[*.html]
indent_style = space
indent_size = 2               # 2 spaces for HTML files in Django projects

# JavaScript files
[*.js]
indent_style = space
indent_size = 2               # 2 spaces for indentation in JavaScript files

# CSS files
[*.css]
indent_style = space
indent_size = 2               # 2 spaces for indentation in CSS files

# Markdown files (Markdown doesnâ€™t trim trailing whitespace as it is used for line breaks)
[*.md]
trim_trailing_whitespace = false

